    <script>
        // Navega√ß√£o entre p√°ginas
        function showForm() {
            document.getElementById('homepage').style.display = 'none';
            document.getElementById('form-section').classList.add('active');
        }

        function showHomepage() {
            document.getElementById('form-section').classList.remove('active');
            document.getElementById('homepage').style.display = 'block';
        }

        // M√°scaras para os campos
        document.getElementById('cpf').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            value = value.replace(/(\d{3})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            e.target.value = value;
        });

        document.getElementById('rg').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            value = value.replace(/(\d{2})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            e.target.value = value;
        });

        document.getElementById('cep').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            value = value.replace(/(\d{5})(\d)/, '$1-$2');
            e.target.value = value;
        });

        document.getElementById('renda').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            value = (value / 100).toLocaleString('pt-BR', {
                style: 'currency',
                currency: 'BRL'
            });
            e.target.value = value;
        });

        // Configura√ß√£o do Supabase
        const SUPABASE_URL = 'https://dbofszbckhlgrrjacbzx.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImRib2ZzemJja2hsZ3JyamFjYnp4Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTkwMjYzMzQsImV4cCI6MjA3NDYwMjMzNH0.BUfsfyCT7iNDF-0HB1TG4rKLX7p7sKxHMOLqsu_nhY4';

        // Fun√ß√£o para enviar dados
        async function enviarDados(dados) {
            try {
                const response = await fetch(`${SUPABASE_URL}/rest/v1/clientes`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'apikey': SUPABASE_ANON_KEY,
                        'Authorization': `Bearer ${SUPABASE_ANON_KEY}`
                    },
                    body: JSON.stringify(dados)
                });

                if (response.ok) {
                    return { success: true };
                } else {
                    throw new Error('Erro na requisi√ß√£o');
                }
            } catch (error) {
                console.error('Erro:', error);
                return { success: false, error };
            }
        }

        // Manipulador do formul√°rio
        document.getElementById('simulationForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const formData = new FormData(e.target);
            const dados = {
                nome_completo: formData.get('nomeCompleto'),
                data_nascimento: formData.get('dataNascimento'),
                cpf: formData.get('cpf'),
                rg: formData.get('rg'),
                renda: formData.get('renda'),
                profissao: formData.get('profissao'),
                cep: formData.get('cep'),
                numero_casa: formData.get('numeroCasa')
            };

            // Enviar dados para o Supabase
            const resultado = await enviarDados(dados);
            
            if (resultado.success) {
                document.getElementById('successMessage').style.display = 'block';
                document.getElementById('errorMessage').style.display = 'none';
                e.target.reset();
                
                // Scroll para a mensagem de sucesso
                document.getElementById('successMessage').scrollIntoView({ 
                    behavior: 'smooth' 
                });
            } else {
                document.getElementById('errorMessage').style.display = 'block';
                document.getElementById('successMessage').style.display = 'none';
                
                // Scroll para a mensagem de erro
                document.getElementById('errorMessage').scrollIntoView({ 
                    behavior: 'smooth' 
                });
            }
        });
    </script>
